<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="138dp"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/subscription_iv"
            android:contentDescription="@string/content_description"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/subscription_title_tv"
            style="@style/Text.Regular.14.PrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Conan O'Brien needs a friend" />

        <TextView
            android:id="@+id/subscription_subtitle_tv"
            style="@style/Text.Regular.12.SecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Conan O'Brien needs a friend" />

    </LinearLayout>

    <View
        android:id="@+id/subscription_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"/>

</FrameLayout>
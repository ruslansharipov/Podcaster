<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ru.sharipov.podcaster.base_feature.ui.widget.fixed_ratio.FixedFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/subscription_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description"
                tools:src="@tools:sample/avatars" />

        </ru.sharipov.podcaster.base_feature.ui.widget.fixed_ratio.FixedFrameLayout>

        <TextView
            android:id="@+id/subscription_title_tv"
            style="@style/Text.Regular.14.PrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Conan O'Brien needs a friend" />

        <TextView
            android:id="@+id/subscription_subtitle_tv"
            style="@style/Text.Regular.12.SecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Conan O'Brien needs a friend" />
    </LinearLayout>

    <View
        android:background="@drawable/bg_selectable_item"
        android:id="@+id/subscription_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"/>
</merge>
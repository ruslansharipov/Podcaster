<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="48dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/player_iv_collapsed"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        style="@style/Text.Regular.10.SecondaryColor"
        android:id="@+id/player_title_collapsed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/player_subtitle_collapsed"
        app:layout_constraintEnd_toStartOf="@id/player_play_ib_collapsed"
        app:layout_constraintStart_toEndOf="@id/player_iv_collapsed"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Conan O'Brian" />

    <TextView
        style="@style/Text.Regular.10.SecondaryColor"
        android:id="@+id/player_subtitle_collapsed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/player_title_collapsed"
        app:layout_constraintStart_toStartOf="@id/player_title_collapsed"
        app:layout_constraintTop_toBottomOf="@id/player_title_collapsed"
        tools:text="Needs a friend" />

    <ru.sharipov.podcaster.base_feature.ui.widget.state_button.StateButton
        android:id="@+id/player_play_ib_collapsed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>